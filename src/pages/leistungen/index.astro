---
import Layout from '../../layouts/Layout.astro';
import { services } from '../../data/services';
---

<Layout title="Leistungen" description="Übersicht unserer Leistungen: Gutachten, Beratung und Dokumentation.">
	<section class="section">
		<div class="site-container">
			<h1 class="text-3xl font-semibold tracking-tight md:text-4xl">Leistungen</h1>
			<p class="mt-3 max-w-2xl text-sm leading-6 text-[rgb(var(--color-muted))]">
				Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor
				invidunt ut labore et dolore magna aliquyam erat.
			</p>

			<div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
				{services.map((service) => (
					<a class="card block p-6 no-underline hover:border-black/20" href={`/leistungen/${service.slug}`}>
						<div class="text-xs font-semibold text-[rgb(var(--color-primary))]">Leistung</div>
						<h2 class="mt-2 text-base font-semibold">{service.title}</h2>
						<p class="mt-2 text-sm leading-6 text-[rgb(var(--color-muted))]">{service.shortDescription}</p>
						<span class="mt-4 inline-flex text-sm font-medium text-[rgb(var(--color-primary))]">
							Zur Detailseite →
						</span>
					</a>
				))}
			</div>
		</div>
	</section>
</Layout>


