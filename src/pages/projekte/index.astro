---
import Layout from '../../layouts/Layout.astro';
import { projects } from '../../data/projects';
---

<Layout title="Projekte" description="Ausgewählte Projekte und Referenzen.">
	<section class="section">
		<div class="site-container">
			<h1 class="text-3xl font-semibold tracking-tight md:text-4xl">Projekte</h1>
			<p class="mt-3 max-w-2xl text-sm leading-6 text-[rgb(var(--color-muted))]">
				Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor
				invidunt ut labore et dolore magna aliquyam erat.
			</p>

			<div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
				{projects.map((p) => (
					<div class="card p-6">
						<div class="flex items-center justify-between gap-3">
							<div class="text-xs font-medium text-[rgb(var(--color-muted))]">
								{p.location} · {p.year}
							</div>
							{p.category && (
								<span class="rounded-full bg-black/5 px-2 py-1 text-xs text-[rgb(var(--color-muted))]">
									{p.category}
								</span>
							)}
						</div>
						<h2 class="mt-3 text-base font-semibold">{p.title}</h2>
						<p class="mt-2 text-sm leading-6 text-[rgb(var(--color-muted))]">{p.summary}</p>
						<p class="mt-4 text-sm leading-6 text-[rgb(var(--color-muted))]">
							<span class="font-medium text-[rgb(var(--color-text))]">Problem:</span>{' '}
							{p.problem ?? 'Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam.'}
						</p>
						<p class="mt-2 text-sm leading-6 text-[rgb(var(--color-muted))]">
							<span class="font-medium text-[rgb(var(--color-text))]">Lösung:</span>{' '}
							{p.solution ?? 'Duis autem vel eum iriure dolor in hendrerit in vulputate.'}
						</p>
					</div>
				))}
			</div>
		</div>
	</section>
</Layout>


