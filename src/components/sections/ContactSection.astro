					<div>
						<div class="text-xs font-semibold uppercase tracking-wide text-[rgb(var(--color-text))]">Telefon</div>
						<div class="mt-1">
							<a class="no-underline hover:opacity-80" href={`tel:${company.contact.phoneHref}`}>
								{company.contact.phonec}
							</a>
