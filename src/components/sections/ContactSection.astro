---
import { company } from '../../data/company';
import ContactForm from '../ContactForm.astro';
---

<section class="section bg-[rgb(var(--color-surface))]">
	<div class="site-container">
		<div class="grid gap-10 lg:grid-cols-2">
			<div>
				<h2 class="text-2xl font-semibold tracking-tight">Kontakt</h2>
				<p class="mt-2 max-w-xl text-sm leading-6 text-[rgb(var(--color-muted))]">
					Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor.
				</p>

				<div class="mt-8 space-y-4 text-sm text-[rgb(var(--color-muted))]">
					<div>
						<div class="text-xs font-semibold uppercase tracking-wide text-[rgb(var(--color-text))]">
							Firma
						</div>
						<div class="mt-1">{company.name}</div>
					</div>
					<div>
						<div class="text-xs font-semibold uppercase tracking-wide text-[rgb(var(--color-text))]">
							Adresse
						</div>
						<div class="mt-1">
							{company.address.line1}<br />
							{company.address.postalCode} {company.address.city}<br />
							{company.address.country}
						</div>
					</div>
					<div>
						<div class="text-xs font-semibold uppercase tracking-wide text-[rgb(var(--color-text))]">
							Telefon
						</div>
						<div class="mt-1">
							<a class="no-underline hover:opacity-80" href={`tel:${company.contact.phoneHref}`}>
								{company.contact.phone}
							</a>
						</div>
					</div>
					<div>
						<div class="text-xs font-semibold uppercase tracking-wide text-[rgb(var(--color-text))]">
							E-Mail
						</div>
						<div class="mt-1">
							<a class="no-underline hover:opacity-80" href={`mailto:${company.contact.email}`}>
								{company.contact.email}
							</a>
						</div>
					</div>
					<div>
						<div class="text-xs font-semibold uppercase tracking-wide text-[rgb(var(--color-text))]">
							BÃ¼rozeiten
						</div>
						<div class="mt-1">{company.contact.officeHours}</div>
					</div>
				</div>
			</div>

			<div class="card p-6 lg:p-8">
				<ContactForm />
			</div>
		</div>
	</div>
</section>


