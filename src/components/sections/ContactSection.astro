						<div class="text-xs font-semibold uppercase tracking-wide text-[rgb(var(--color-text))]">E-Mail</div>
						<div class="mt-1">
							<a class="no-underline hover:opacity-80" href={`mailto:${company.contact.email}`}>
								{company.contact.email}
							</a>
						</div>
					</div>

					<div>
						<div class="text-xs font-semibold uppercase tracking-wide text-[rgb(var(--color-text))]">Bürozeiten</div>
