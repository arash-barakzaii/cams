---
import { projects } from '../../data/projects';
---

<section class="section bg-[rgb(var(--color-surface))]">
	<div class="site-container">
		<div class="flex items-end justify-between gap-6">
			<div>
				<h2 class="text-2xl font-semibold tracking-tight">Ausgewählte Projekte</h2>
				<p class="mt-2 max-w-2xl text-sm leading-6 text-[rgb(var(--color-muted))]">
					Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor.
				</p>
			</div>
			<a class="hidden text-sm text-[rgb(var(--color-primary))] no-underline hover:opacity-80 md:block" href="/projekte">
				Alle Projekte
			</a>
		</div>

		<div class="mt-10 grid gap-6 md:grid-cols-3">
			{projects.slice(0, 3).map((project) => (
				<div class="card p-6">
					<div class="text-xs font-medium text-[rgb(var(--color-muted))]">
						{project.location} · {project.year}
					</div>
					<h3 class="mt-2 text-base font-semibold">{project.title}</h3>
					<p class="mt-2 text-sm leading-6 text-[rgb(var(--color-muted))]">{project.summary}</p>
					<p class="mt-4 text-sm leading-6 text-[rgb(var(--color-muted))]">
						<span class="font-medium text-[rgb(var(--color-text))]">Problem:</span>{' '}
						{project.problem ?? 'Lorem ipsum dolor sit amet, consetetur sadipscing elitr.'}
					</p>
					<p class="mt-2 text-sm leading-6 text-[rgb(var(--color-muted))]">
						<span class="font-medium text-[rgb(var(--color-text))]">Lösung:</span>{' '}
						{project.solution ?? 'Sed diam nonumy eirmod tempor invidunt ut labore et dolore.'}
					</p>
				</div>
			))}
		</div>

		<div class="mt-10">
			<a class="btn btn-secondary" href="/projekte">Alle Projekte ansehen</a>
		</div>
	</div>
</section>


