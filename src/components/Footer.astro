---
import { company } from '../data/company';
---

<footer class="border-t bg-[rgb(var(--color-surface))]" style="border-color: rgb(var(--color-border) / 0.12);">
	<div class="mx-auto w-full max-w-[1100px] px-4 py-14">
		<div class="grid gap-10 md:grid-cols-3">
			<div class="space-y-3">
				<div class="text-sm font-semibold text-[rgb(var(--color-primary))]">{company.name}</div>
				<div class="text-sm text-[rgb(var(--color-muted))]">
					<div>{company.address.line1}</div>
					<div>
						{company.address.postalCode} {company.address.city}
					</div>
					<div>{company.address.country}</div>
				</div>
				<div class="text-sm text-[rgb(var(--color-muted))]">
					<div>
						<a class="no-underline hover:opacity-80" href={`tel:${company.contact.phoneHref}`}>
							{company.contact.phone}
						</a>
					</div>
					<div>
						<a class="no-underline hover:opacity-80" href={`mailto:${company.contact.email}`}>
							{company.contact.email}
						</a>
					</div>
					<div>{company.contact.officeHours}</div>
				</div>
			</div>

			<div class="space-y-3">
				<div class="text-sm font-semibold text-[rgb(var(--color-text))]">Navigation</div>
				<ul class="space-y-2 text-sm text-[rgb(var(--color-muted))]">
					{company.navigation.main.map((item) => <li><a class="no-underline hover:opacity-80" href={item.href}>{item.label}</a></li>)}
					<li>
						<a class="no-underline hover:opacity-80" href={company.navigation.cta.href}>
							{company.navigation.cta.label}
						</a>
					</li>
				</ul>
			</div>

			<div class="space-y-3">
				<div class="text-sm font-semibold text-[rgb(var(--color-text))]">Rechtliches</div>
				{company.legal.showLinks ? (
					<ul class="space-y-2 text-sm text-[rgb(var(--color-muted))]">
						{company.legal.items.map((item) => <li><a class="no-underline hover:opacity-80" href={item.href}>{item.label}</a></li>)}
					</ul>
				) : (
					<p class="text-sm text-[rgb(var(--color-muted))]">Wird vor dem Livegang ergänzt.</p>
				)}
			</div>
		</div>

		<div class="mt-10 border-t pt-6 text-xs text-[rgb(var(--color-muted))]" style="border-color: rgb(var(--color-border) / 0.12);">
			© {new Date().getFullYear()} {company.name}
		</div>
	</div>
</footer>


