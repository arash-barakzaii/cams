---
import { company } from '../data/company';
import logoWeiß from '../assets/CAMS_weiß.svg';
---

<footer data-footer class="border-t bg-[rgb(var(--color-primary))] text-white" style="border-color: rgb(255 255 255 / 0.1);">
	<div class="mx-auto w-full max-w-[1300px] px-4 py-12 flex flex-col items-center">
		<!-- Hauptbereich: Logo+Text links, 3 Spalten rechts -->
		<div class="mb-10 w-full grid gap-8 md:grid-cols-[1fr_2fr] md:gap-12">
			<!-- Links: Logo + Branding -->
			<div class="space-y-4">
				<!-- Logo + Text auf einer Linie mit Spalten-Überschriften -->
				<div class="flex items-start gap-4">
					<img 
						src={logoWeiß.src} 
						alt="CAMS Logo" 
						class="h-16 w-16 flex-shrink-0 object-contain"
					/>
					<div class="pt-1">
						<div class="text-base font-bold text-white">{company.name}</div>
						<div class="mt-1 text-xs text-white/70">{company.officeLabel}</div>
					</div>
				</div>
				<p class="text-sm leading-relaxed text-white/80">
					Unabhängiges Ingenieurbüro für Bauphysik, Energieberatung und technische Projektsteuerung.
				</p>
				
				<!-- Social Media -->
				<div class="flex items-center gap-3">
					<span class="text-xs text-white/60">Folgen Sie uns:</span>
					<div class="flex gap-2">
						<a href="#" class="flex h-8 w-8 items-center justify-center rounded-full border border-white/20 bg-white/5 text-white transition-all hover:bg-white/10 hover:border-white/30" aria-label="LinkedIn">
							<svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
								<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
							</svg>
						</a>
						<a href="#" class="flex h-8 w-8 items-center justify-center rounded-full border border-white/20 bg-white/5 text-white transition-all hover:bg-white/10 hover:border-white/30" aria-label="Instagram">
							<svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
							</svg>
						</a>
						<a href="#" class="flex h-8 w-8 items-center justify-center rounded-full border border-white/20 bg-white/5 text-white transition-all hover:bg-white/10 hover:border-white/30" aria-label="Twitter/X">
							<svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
								<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
							</svg>
						</a>
					</div>
				</div>
			</div>

			<!-- Rechts: 3 Spalten -->
			<div class="grid gap-8 md:grid-cols-3">
				<!-- Spalte 1: Navigation -->
				<div class="space-y-4">
					<h3 class="text-sm font-semibold uppercase tracking-wider text-white">Navigation</h3>
					<nav>
						<ul class="space-y-2.5">
							{company.navigation.main.map((item) => (
								<li>
									<a 
										class="text-sm text-white/80 transition-colors hover:text-white no-underline" 
										href={item.href}
									>
										{item.label}
									</a>
								</li>
							))}
							<li>
								<a 
									class="text-sm text-white/80 transition-colors hover:text-white no-underline" 
									href={company.navigation.cta.href}
								>
									{company.navigation.cta.label}
								</a>
							</li>
						</ul>
					</nav>
				</div>

				<!-- Spalte 2: Kontakt -->
				<div class="space-y-4">
					<h3 class="text-sm font-semibold uppercase tracking-wider text-white">Kontakt</h3>
					<div class="space-y-2.5 text-sm text-white/80">
						<div>
							<div>{company.address.line1}</div>
							<div>{company.address.postalCode} {company.address.city}</div>
							<div>{company.address.country}</div>
						</div>
						<div>
							<a class="no-underline hover:text-white transition-colors" href={`tel:${company.contact.phoneHref}`}>
								{company.contact.phonec}
							</a>
							<br>
							<a class="no-underline hover:text-white transition-colors" href={`tel:${company.contact.phoneHref}`}>
								{company.contact.phonea}
							</a>
						</div>
						<div>
							<a class="no-underline hover:text-white transition-colors" href={`mailto:${company.contact.email}`}>
								{company.contact.email}
							</a>
						</div>
						<div>{company.contact.officeHours}</div>
					</div>
				</div>

				<!-- Spalte 3: Rechtliches -->
				<div class="space-y-4">
					<h3 class="text-sm font-semibold uppercase tracking-wider text-white">Rechtliches</h3>
					{company.legal.showLinks ? (
						<ul class="space-y-2.5 text-sm text-white/80">
							{company.legal.items.map((item) => (
								<li>
									<a class="no-underline hover:text-white transition-colors" href={item.href}>
										{item.label}
									</a>
								</li>
							))}
						</ul>
					) : (
						<p class="text-sm text-white/80">Wird vor dem Livegang ergänzt.</p>
					)}
				</div>
			</div>
		</div>

		<!-- Bottom: Copyright -->
		<div class="w-screen border-t py-6 -mx-[calc((100vw-100%)/2)]" style="border-color: rgb(255 255 255 / 0.1);">
			<div class="mx-auto w-full max-w-[1300px] px-4 text-center text-xs text-white/60">
				© {new Date().getFullYear()} {company.name}
			</div>
		</div>
	</div>
</footer>